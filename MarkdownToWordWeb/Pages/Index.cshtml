@page
@model IndexModel
@{
    ViewData["Title"] = "Markdown to Word Converter";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4">Markdown to Word Converter</h1>
        <p class="lead">Easily convert your Markdown files to Word documents</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title mb-4">Upload Markdown File</h5>
                    
                    <form method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="markdownFile" class="form-label">Select Markdown File (.md)</label>
                            <input type="file" class="form-control" id="markdownFile" name="markdownFile" accept=".md,.markdown,.txt" required>
                            <div class="form-text">Choose a Markdown file to convert to Word document</div>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-file-earmark-word"></i> Convert to Word
                            </button>
                        </div>
                    </form>

                    @if (Model.ErrorMessage != null)
                    {
                        <div class="alert alert-danger mt-3" role="alert">
                            @Model.ErrorMessage
                        </div>
                    }

                    @if (Model.SuccessMessage != null)
                    {
                        <div class="alert alert-success mt-3" role="alert">
                            @Model.SuccessMessage
                        </div>
                    }
                </div>
            </div>

            <div class="card shadow mt-4">
                <div class="card-body">
                    <h5 class="card-title mb-3">Or Enter Markdown Text</h5>
                    
                    <form method="post" asp-page-handler="Text">
                        <div class="mb-3">
                            <label for="markdownText" class="form-label">Markdown Content</label>
                            <textarea class="form-control" id="markdownText" name="markdownText" rows="10" placeholder="Enter your markdown content here..."></textarea>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-file-earmark-word"></i> Convert Text to Word
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card shadow mt-4">
                <div class="card-body">
                    <h5 class="card-title">Supported Markdown Features</h5>
                    <ul class="list-unstyled">
                        <li>✓ Headings (# H1, ## H2, etc.)</li>
                        <li>✓ Bold (**text**)</li>
                        <li>✓ Italic (*text*)</li>
                        <li>✓ Bullet lists (- item or * item)</li>
                        <li>✓ Numbered lists (1. item)</li>
                        <li>✓ Paragraphs</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
